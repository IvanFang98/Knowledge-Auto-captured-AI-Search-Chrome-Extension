{
  "manifest_version": 3,
  "name": "Knowledge Capture & AI Search",
  "version": "1.0.0",
  "description": "Capture articles as you browse and search them with AI-powered semantic understanding. Export to NotebookLM for deeper analysis.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://*.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Knowledge Capture & AI Search"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "trigger_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture current page content"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  }
} 
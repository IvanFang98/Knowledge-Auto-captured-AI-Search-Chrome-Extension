{
  "manifest_version": 3,
  "name": "SmartGrab AI Search",
  "version": "1.0",
  "description": "Capture, organize, and export articles to NotebookLM",
  
  "permissions": ["identity", "storage", "tabs", "scripting"],
  
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://drive.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["notebooklm_automation.js"],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": ["https://drive.google.com/*"],
      "js": ["picker_automation.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "trigger_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture current page content"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SmartGrab - NotebookLM Connector",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "popup.html"
  }
} 
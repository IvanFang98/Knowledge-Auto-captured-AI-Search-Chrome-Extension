{
  "manifest_version": 3,
  "name": "SmartGrab AI Search",
  "version": "1.0",
  "description": "Capture, organize, and export articles to NotebookLM",
  
  "permissions": ["storage", "tabs", "scripting", "sidePanel", "notifications"],
  
  "host_permissions": [
    "https://notebooklm.google.com/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["notebooklm_automation.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://notebooklm.google.com/*"],
      "js": ["content.js"],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "trigger_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Capture current page content"
    }
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "action": {
    "default_title": "SmartGrab - NotebookLM Connector",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "side_panel": {
    "default_path": "popup.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["vertex_ai_search.js", "vertex_config.js", "lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 